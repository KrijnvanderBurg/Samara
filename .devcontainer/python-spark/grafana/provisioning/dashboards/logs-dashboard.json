{
  "title": "Samara Logs Dashboard",
  "uid": "samara-logs",
  "tags": ["samara", "logs"],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "30s",
  "time": {
    "from": "now-6h",
    "to": "now"
  },
  "panels": [
    {
      "id": 1,
      "type": "logs",
      "title": "Samara Application Logs",
      "gridPos": {
        "h": 12,
        "w": 24,
        "x": 0,
        "y": 0
      },
      "datasource": {
        "type": "loki",
        "uid": "Loki"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "{service_name=\"samara\"}",
          "queryType": "range",
          "editorMode": "code"
        }
      ],
      "options": {
        "showTime": true,
        "showLabels": true,
        "showCommonLabels": false,
        "wrapLogMessage": true,
        "prettifyLogMessage": false,
        "enableLogDetails": true,
        "dedupStrategy": "none",
        "sortOrder": "Descending"
      }
    },
    {
      "id": 2,
      "type": "logs",
      "title": "Error Logs",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 0,
        "y": 12
      },
      "datasource": {
        "type": "loki",
        "uid": "Loki"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "{service_name=\"samara\"} |~ \"(?i)(error|exception|failed)\"",
          "queryType": "range",
          "editorMode": "code"
        }
      ],
      "options": {
        "showTime": true,
        "showLabels": true,
        "wrapLogMessage": true,
        "enableLogDetails": true,
        "sortOrder": "Descending"
      }
    },
    {
      "id": 3,
      "type": "stat",
      "title": "Log Volume by Level",
      "gridPos": {
        "h": 8,
        "w": 12,
        "x": 12,
        "y": 12
      },
      "datasource": {
        "type": "loki",
        "uid": "Loki"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (severity) (count_over_time({service_name=\"samara\"} [$__interval]))",
          "queryType": "range",
          "legendFormat": "{{severity}}",
          "editorMode": "code"
        }
      ],
      "options": {
        "graphMode": "area",
        "colorMode": "value",
        "orientation": "auto",
        "textMode": "auto",
        "reduceOptions": {
          "values": false,
          "calcs": ["lastNotNull"]
        }
      },
      "fieldConfig": {
        "defaults": {
          "color": {
            "mode": "palette-classic"
          },
          "mappings": [],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              {
                "color": "green",
                "value": null
              }
            ]
          }
        }
      }
    },
    {
      "id": 4,
      "type": "table",
      "title": "Recent Log Entries",
      "gridPos": {
        "h": 8,
        "w": 24,
        "x": 0,
        "y": 20
      },
      "datasource": {
        "type": "loki",
        "uid": "Loki"
      },
      "targets": [
        {
          "refId": "A",
          "expr": "{service_name=\"samara\"}",
          "queryType": "instant",
          "editorMode": "code"
        }
      ],
      "transformations": [
        {
          "id": "organize",
          "options": {
            "excludeByName": {},
            "indexByName": {},
            "renameByName": {
              "Time": "Timestamp",
              "Line": "Message",
              "severity": "Level"
            }
          }
        }
      ],
      "options": {
        "showHeader": true,
        "footer": {
          "show": false
        }
      }
    }
  ],
  "templating": {
    "list": [
      {
        "name": "log_level",
        "label": "Log Level",
        "type": "custom",
        "current": {
          "selected": false,
          "text": "All",
          "value": ".*"
        },
        "options": [
          {
            "selected": true,
            "text": "All",
            "value": ".*"
          },
          {
            "selected": false,
            "text": "DEBUG",
            "value": "DEBUG"
          },
          {
            "selected": false,
            "text": "INFO",
            "value": "INFO"
          },
          {
            "selected": false,
            "text": "WARNING",
            "value": "WARNING"
          },
          {
            "selected": false,
            "text": "ERROR",
            "value": "ERROR"
          },
          {
            "selected": false,
            "text": "CRITICAL",
            "value": "CRITICAL"
          }
        ],
        "query": "All : .*, DEBUG : DEBUG, INFO : INFO, WARNING : WARNING, ERROR : ERROR, CRITICAL : CRITICAL",
        "hide": 0
      }
    ]
  }
}